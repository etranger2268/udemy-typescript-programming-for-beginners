{
	"name": "udemy-typescript-programming-for-beginners",
	"private": true,
	"type": "module",
	"scripts": {
		"ts:watch": "tsc --watch",
		"css:watch": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/output.css --watch",
		"dev": "run-p ts:watch css:watch",
		"ts:build": "tsc",
		"css:build": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/output.css --minify",
		"build": "run-s ts:build css:build"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@tailwindcss/cli": "^4.1.17",
		"npm-run-all": "^4.1.5",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3"
	}
}
